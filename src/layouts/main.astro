---
import { Sprite } from 'astro-icon'

import resetCSS from '../styles/reset.scss?inline'
import globalCSS from '../styles/global.scss?inline'

import FlyoutMenu from '../components/FlyoutMenu/FlyoutMenu.astro'
import FlyoutContact from '../components/FlyoutContact/FlyoutContact.astro'
import Header from '../components/Header/Header.astro'
---

<html lang="en" class="snap no-js">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no">
    <title>{Astro.props.title || 'Frontribe | Frontend Career Management'}</title>
    <meta name="description" content={Astro.props.description}>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
      rel="preload"
      href="https://fonts.googleapis.com/css2?family=Rajdhani:wght@400;600&display=swap"
      as="style"
      onload="this.onload=null;this.rel='stylesheet'"
    />

    <link rel="apple-touch-icon" sizes="180x180" href="/favicons/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicons/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicons/favicon-16x16.png">
    <link rel="manifest" href="/favicons/site.webmanifest">
    <link rel="mask-icon" href="/favicons/safari-pinned-tab.svg" color="#444444">
    <link rel="shortcut icon" href="/favicons/favicon.ico">
    <meta name="msapplication-TileColor" content="#da532c">
    <meta name="msapplication-config" content="/favicons/browserconfig.xml">
    <meta name="theme-color" content="#ffffff">

    <meta property="og:site_name" content="Frontribe">
    <meta property="og:title" content={Astro.props.title || 'Frontribe | Frontend Career Management'}>
    <meta property="og:description" content={Astro.props.description}>
    <meta property="og:type" content="website" />
    <meta property="og:url" content={'https://frontribe.com' + Astro.props.slug}>
    <meta property="og:image" content="https://frontribe.com/images/card-facebook.png">
    <meta name="twitter:card" content="https://frontribe.com/images/card-twitter.png">

    <script async src="https://www.googletagmanager.com/gtag/js?id=G-9X3C034D7W"></script>
    <script>
      document.querySelector('html').classList.remove('no-js')

      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-9X3C034D7W');
    </script>

    <script type="module" hoist>
      import '../scripts/enableAnims.js'
      import '../scripts/setCSSVars.js'
      import '../scripts/focusControl.js'
      import '../scripts/quicklink.js'
    </script>

    <style is:inline set:html={resetCSS + globalCSS}></style>
  </head>
<body class={Astro.props.bodyClass}>
  <Sprite.Provider>

    <FlyoutMenu />
    <FlyoutContact />
    <Header />

    <div class="pageframe" flyout-zoom-pane>
      <slot/>
    </div>

  </Sprite.Provider>
</body>
</html>
